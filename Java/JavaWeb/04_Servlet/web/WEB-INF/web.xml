<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <context-param>
        <param-username>user</param-username>
        <param-value>zhangsan</param-value>
    </context-param>

    <!--所有Servlet程序都需要在web.xml配置-->
    <servlet>
        <!--servlet-username:Servlet程序的别名,一般和Servlet类名一致-->
        <servlet-username>HelloServlet</servlet-username>
        <!--servlet-class为Servlet程序的全类名-->
        <servlet-class>demo.Servlet.HelloServlet</servlet-class>
        <init-param>
            <param-username>user</param-username>
            <param-value>root</param-value>
        </init-param><init-param>
            <param-username>password</param-username>
            <param-value>123</param-value>
        </init-param>
    </servlet>
    <servlet-mapping>
        <!--这里的servlet-name必须和<servlet>配置的servlet-name一致-->
        <servlet-username>HelloServlet</servlet-username>
        <!--url-pattern:请求的资源路径-->
        <url-pattern>/hello</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-username>HttpServletTest</servlet-username>
        <servlet-class>demo.httpservlet.HttpServletTest</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-username>HttpServletTest</servlet-username>
        <url-pattern>/hello2</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-username>ContextTest</servlet-username>
        <servlet-class>demo.context.ContextTest</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-username>ContextTest</servlet-username>
        <url-pattern>/context</url-pattern>
    </servlet-mapping>
    
    
    <servlet>
        <servlet-username>RequestTest</servlet-username>
        <servlet-class>demo.request.RequestTest</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-username>RequestTest</servlet-username>
        <url-pattern>/request</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-username>Servlet1</servlet-username>
        <servlet-class>demo.request.Servlet1</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-username>Servlet1</servlet-username>
        <url-pattern>/servlet1</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-username>Servlet2</servlet-username>
        <servlet-class>demo.request.Servlet2</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-username>Servlet2</servlet-username>
        <url-pattern>/servlet2</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-username>ResponseTest</servlet-username>
        <servlet-class>demo.response.ResponseTest</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-username>ResponseTest</servlet-username>
        <url-pattern>/response</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-username>Response1</servlet-username>
        <servlet-class>demo.response.Response1</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-username>Response1</servlet-username>
        <url-pattern>/response1</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-username>Response2</servlet-username>
        <servlet-class>demo.response.Response2</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-username>Response2</servlet-username>
        <url-pattern>/response2</url-pattern>
    </servlet-mapping>

</web-app>